{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "grusza/sslv-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "grusza/sslv-server",
      "hostname": "server",
      "essential": false
    },
    {
      "name": "worker",
      "image": "grusza/sslv-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "grusza/sslv-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMapping": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}